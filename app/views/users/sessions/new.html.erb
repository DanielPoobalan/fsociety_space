<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h3 class="text-center">New Sessions</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		  <% if current_user %>
		    Signed in as <strong><%= current_user.name %></strong>!
		    <hr>
		    <%= link_to "Sign out", signout_path, id: "sign_out", class: "btn btn-danger btn-lg" %>
		  <% else %>
		    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: "btn btn-primary btn-lg" %>
		  <% end %>
		</div>
	</div>
</div>

